<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_btn_read"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/lesson_game"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="380dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/txt_trp_khamtham" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/fontlaos"
            android:text="ເກມຫັດອ່ານ"
            android:textColor="#33C2C7"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/time_bar_text"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/animated"
                android:gravity="center"
                android:shadowColor="#2eaed9"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="00:30"
                android:textColor="#FFFFFF"
                android:textSize="35sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/countLabel"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:fontFamily="@font/animated"
            android:text="1/10"
            android:textColor="#A5A5A5"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/question"
            android:layout_width="568dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:text="Question"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:src="@drawable/txt_total" />
    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/model_test"
        android:layout_marginTop="100dp"
        android:background="@drawable/test"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="541dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/qu1"
            android:layout_width="436dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_weight="1"
            android:background="@drawable/soy"
            android:drawableLeft="@drawable/btn_a"
            android:fontFamily="@font/fontlaos"
            android:onClick="checkAnswer"
            android:paddingRight="40sp"
            android:text="aa"
            android:textColor="#F6B400"
            android:textSize="25sp" />

        <Button
            android:id="@+id/qu2"
            android:layout_width="436dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/soy"
            android:drawableLeft="@drawable/btn_b"
            android:fontFamily="@font/fontlaos"
            android:onClick="checkAnswer"
            android:paddingRight="40sp"
            android:text="bb"
            android:textColor="#F6B400"
            android:textSize="25sp" />

        <Button
            android:id="@+id/qu3"
            android:layout_width="436dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            android:background="@drawable/soy"
            android:drawableLeft="@drawable/btn_c"
            android:fontFamily="@font/fontlaos"
            android:onClick="checkAnswer"
            android:paddingRight="40sp"
            android:text="cc"
            android:textColor="#F6B400"
            android:textSize="25sp" />

        <RelativeLayout
            android:id="@+id/show_t_and_f"
            android:layout_width="82dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/btn_next"
        android:layout_gravity="center"/>
</LinearLayout>

</LinearLayout>