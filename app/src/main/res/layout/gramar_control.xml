<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_control_gramar"
    tools:context=".Control.Gramar_control">
    <ImageView
        android:id="@+id/exit"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="600dp"
        android:src="@drawable/btn_game_leson" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:textColor="#33C2C7"
            android:text="ເກມຫັດອ່ານ"
            android:textSize="25sp"
            android:fontFamily="@font/fontlaos"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1">



            <TextView
                android:id="@+id/time_bar_text"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="100dp"
                android:fontFamily="@font/animated"
                android:gravity="center"
                android:shadowColor="#2eaed9"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="00:30"
                android:textColor="#A5A5A5"
                android:textSize="30sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/countLabel"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="1/10"
            android:fontFamily="@font/animated"
            android:textColor="#A5A5A5"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/question"
            android:layout_width="450dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="150dp"
            android:clickable="false"
            android:scaleType="fitCenter"
            android:src="@drawable/txt_qs_gra_lesson1_1"
            android:text="Question"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/txt_total" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/qu1"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/brn_soy_khrkai"
            android:fontFamily="@font/fontlaos"
            android:text=",  "
            android:textColor="#FF0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/qu2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:fontFamily="@font/fontlaos"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="140dp"
            android:textColor="#FF0000"
            android:background="@drawable/btn_soy_khrkhai"
            android:text=".  " />

    </LinearLayout>

</LinearLayout>