<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_noun"
    android:orientation="vertical"
    tools:context=".Control.Noun_control">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginLeft="300dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/countLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:fontFamily="@font/fontlaos"
            android:text="0/10"
            android:textColor="#A5A5A5"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/time_bar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fontlaos"
            android:text="50"
            android:textColor="#33C2C7"
            android:textSize="25sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fontlaos"
            android:text=" ວິນາທີິ"
            android:textColor="#A5A5A5"
            android:textSize="25sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="773dp"
        android:layout_height="95dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/box_show"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="68dp"
            android:background="@drawable/txt_input"
            android:fontFamily="@font/fontlaos"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/qs_n"
            android:layout_width="509dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/fontlaos"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/n_text1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="170dp"
            android:background="#FFAA00"
            android:fontFamily="@font/fontlaos"
            android:onClick="check_noun"
            android:text="A"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/n_text2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="#FFAA00"
            android:fontFamily="@font/fontlaos"
            android:onClick="check_noun"
            android:text="B"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/n_text3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="#FFAA00"
            android:fontFamily="@font/fontlaos"
            android:onClick="check_noun"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/model_show"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:src="@drawable/noun_q" />

        <RelativeLayout
            android:id="@+id/show_t_and_f"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="29dp" />
    </LinearLayout>
</LinearLayout>