<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lesson"
    android:orientation="vertical"
    tools:context=".Control.Select_image_control">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="121dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lesson_game"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="350dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:textSize="46sp"
            android:textColor="@color/white"
            android:fontFamily="@font/fontlaos"
            android:text="ເລືອກຮູບທີ່ຖືກຕ້ອງ" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/question"
            android:layout_width="448dp"
            android:layout_height="139dp"
            android:layout_marginLeft="250dp"
            android:src="@drawable/qs_input_image" />

        <TextView
            android:id="@+id/time_bar_text"
            android:layout_width="103dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/fontlaos"
            android:text="00:30"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/countLabel"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/animated"
            android:text="1/10"
            android:textColor="#A5A5A5"
            android:textSize="35sp"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_select_text1"
            android:orientation="vertical">

            <Button
                android:id="@+id/qu1"
                android:layout_width="230dp"
                android:layout_height="152dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:onClick="Check"
                android:src="@drawable/ex1"
                android:textColor="@color/Tranparent">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_select_text1"
            android:orientation="vertical">

            <Button
                android:id="@+id/qu2"
                android:layout_width="224dp"
                android:layout_height="152dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:onClick="Check"
                android:src="@drawable/ex2"
                android:textColor="@color/Tranparent">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_select_text1"
            android:orientation="vertical">

            <Button
                android:id="@+id/qu3"
                android:layout_width="230dp"
                android:layout_height="146dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:onClick="Check"
                android:src="@drawable/ex3"
                android:textColor="@color/Tranparent">

            </Button>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/show_t_and_f"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/btnnext"
            android:layout_width="100dp"
            android:layout_height="61dp"
            android:layout_gravity="center"
            android:layout_marginLeft="200dp" />
    </LinearLayout>
</LinearLayout>