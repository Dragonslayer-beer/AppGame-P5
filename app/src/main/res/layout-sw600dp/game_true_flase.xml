<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_btn_read"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lesson_game"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="380dp"
            android:adjustViewBounds="true"
            android:src="@drawable/z" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/time_bar_text"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:fontFamily="@font/animated"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:shadowColor="#2eaed9"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="00:30"
                android:textColor="#FFFFFF"
                android:textSize="35sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/countLabel"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/animated"
            android:text="1/10"
            android:textColor="#A5A5A5"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/question"
            android:layout_width="450dp"
            android:layout_height="89dp"
            android:layout_gravity="center"
            android:layout_marginLeft="260dp"
            android:layout_marginRight="150dp"
            android:scaleType="fitCenter"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emoji"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="430dp"
            android:background="@drawable/emoji_normal" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="120dp"
            android:onClick="checkAnswer"
            android:id="@+id/true_btn"
            android:textSize="20sp"
            android:textColor="@color/Tranparent"
            android:layout_marginLeft="370dp"
            android:background="@drawable/btn_true"
            android:gravity="center_horizontal"
            android:layout_height="80dp"/>
        <TextView
            android:layout_width="100dp"
            android:onClick="checkAnswer"
            android:id="@+id/btn_false"
            android:textColor="@color/Tranparent"
            android:background="@drawable/btn_fluse"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:gravity="center_horizontal"
            android:layout_height="80dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="120dp"
            android:id="@+id/btn_next"
            android:layout_gravity="center"/>


    </LinearLayout>
</LinearLayout>