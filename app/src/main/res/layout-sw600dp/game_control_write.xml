<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_btn_read"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lesson_game"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="380dp"
            android:adjustViewBounds="true"
            android:src="@drawable/txt_khien_kham_sub" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="252dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1">


            <TextView
                android:id="@+id/time_bar_text"
                android:layout_width="108dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="100dp"
                android:fontFamily="@font/animated"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:shadowColor="#2eaed9"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="4"
                android:text="00:30"
                android:textColor="#FFFFFF"
                android:textSize="35sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/countLabel"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/animated"
            android:text="1/10"
            android:textColor="#A5A5A5"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/question"
            android:layout_width="477dp"
            android:layout_height="111dp"
            android:layout_gravity="center"
            android:layout_marginLeft="210dp"
            android:layout_marginRight="150dp"
            android:onClick="play"
            android:scaleType="fitCenter"
            android:src="@drawable/listen_play_main"
            android:textSize="40sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txt_input_write"
            android:layout_width="463dp"
            android:layout_height="73dp"
            android:layout_marginLeft="230dp"
            android:layout_marginRight="150dp"
            android:background="@drawable/edit_text_design"
            android:ellipsize="start"
            android:fontFamily="@font/fontlaos"
            android:gravity="center_horizontal"
            android:hint="ພິມຄຳສັບທີ່ໄດ້ຍິນຢູ່ບ່ອນນີ້"
            android:singleLine="true"
            android:textSize="35sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/model_test"
            android:background="@drawable/test"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/show_t_and_f"
            android:layout_width="140dp"
            android:layout_height="67dp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btn_test"
            android:layout_width="174dp"
            android:layout_height="67dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/edit_text_design"
            android:fontFamily="@font/fontlaos"
            android:gravity="center_horizontal"
            android:onClick="checkAnswer"
            android:text="ຕົງລົງ"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp" />
    </LinearLayout>
</LinearLayout>